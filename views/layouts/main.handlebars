{{!-- this file will contain the dynamic content being added to handelbars --}}

<h1>Burgers</h1>

<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger: {{this.burger}}</p>
       <button type="submit">Eat it!</button>
  	</li>
  {{/each}}
</ul>

<div>
  <form action="/" method="POST">
  	<textarea type="text" name="burger"></textarea>

  	<button type="submit">Submit</button>
  </form>
</div>