<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="assets/burger_style.css">

<h1>Burgers</h1>

<div id="d1">
<ul id="list1">
  {{#each burgers}}
  <li>
    <p>Burger: {{this.burger_name}}</p>
    
    {{!-- <form action="/update/{{id}}" method="POST" >  --}}
      {{!-- <input type="hidden"> --}}
      <!-- whatever you put as the input value will be sent to the backend-->
      <button type="button" class="eat"  data-id="{{id}}" data-status="{{devoured}}">
        {{!-- this should be the logic for deciding whether the burger has been eaten or not --}} {{#if devoured}} yum!{{else}} I'm
        hungry!{{/if}}
      </button>
      {{!-- </form>  --}}
  </li>
  {{/each}}
</ul>
</div> 



