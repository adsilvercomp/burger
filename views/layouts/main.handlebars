{{!-- this file will contain the dynamic content being added to handelbars --}} {{!-- render to the first list where devoured
is false and render to the second list where devoured is true --}} {{!-- html form automatically returns an object --}}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="assets/burger_style.css">

<h1>Burgers</h1>

<div id="d1">
  <ul id="list1">
    {{#each burgers}} {{#unless this.devoured}}
    <li>
      <p>Burger: {{this.burger_name}}</p>

      
        <button type="button" class="eat" data-id="{{id}}" data-status="{{devoured}}">
          {{!-- this should be the logic for deciding whether the button says eaten or not --}} {{#if devoured}} yum!{{else}} I'm
          hungry!{{/if}}
        </button>
    
    </li>
    {{/unless}} {{/each}}
  </ul>
</div>


<div id="d2">
  <ul id="list2">
    {{#each burgers}} {{#if this.devoured}}
    <li>
      <p>Burger: {{this.burger_name}}</p>

      
        <button type="button" class="eat" data-id="{{id}}" data-status="{{devoured}}">
          {{!-- this should be the logic for deciding whether the button says eaten or not --}} {{#if devoured}} yum!{{else}} I'm
          hungry!{{/if}}
        </button>
        
    </li>
   {{/if}} {{/each}} 
  </ul>
</div>










<div id="eaten">

  <div>

    {{!-- this is the submit button for adding a new burger to the undevoured list --}}
    <form action="/" method="POST">
      <input type="text" name="name"></input>

      <button type="submit">Submit</button>
    </form>
  </div>

  <script type="text/javascript" src="assets/frontEnd.js"></script>